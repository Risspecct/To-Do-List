spring.application.name= your_application_name

# Database properties (update with your local values)
spring.datasource.url=jdbc:mysql://localhost:3306/
spring.datasource.username=your_username
spring.datasource.password=your_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA Properties
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true

# Spring Security Properties. This is used when only relying on default spring security
spring.security.user.name=sample_username
spring.security.user.password=sample_pwd

# Jwt Configuration
jwt.secret = your_256_char_long_jwt_secret_key
jwt.expiration = time_it_takes_for_token_expiration_in_milliseconds